{% set route_name = app.request.get('_route')|replace({'app_': '', '_': ' '}) | capitalize %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %} {{ route_name }} - StudentSpace {% endblock %}</title>
        <link rel="icon" href="{{ asset('imgs/icon.png')}}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="flex bg-bg lg:gap-[20px] h-screen w-full flex-col lg:flex-row lg:p-[20px]">
        {% block body %}
            {% include 'components/sidebar.html.twig' %}
            <div class="w-full h-full bg-whitee flex flex-col p-[20px] gap-[40px] lg:rounded-[40px] lg:shadows justify-start">
                <div class="heading-1">
                    {{ route_name }}
                </div>
                {% block body_content %}
                    Maxim Ti amo
                {% endblock %}
            </div>
        {% endblock %}
    </body>
</html>
