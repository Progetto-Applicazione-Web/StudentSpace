{% set route_name = app.request.get('_route')|replace({'app_': '', '_': ' '}) %}

{% block modal %}
	<form id="formAddTassa" class="flex justify-center items-center z-50 absolute w-screen h-screen bg-[#46475ad3] m-[-20px]">
		<div class="p-[30px] flex items-start flex-col gap-3 rounded-[30px] bg-whitee aspect-video h-3/4 ">
			<span class="flex justify-between items-center w-full">
				
				<p class="p text-grayy cursor-pointer">Nuova Tassa</p>
					

				<img class="modalTasseButton aspect-square h-[30px] cursor-pointer" src="{{ asset('icons/close.svg') }}" alt="Chiudi">


			</span>

			<h1 class="flex heading-1 text-blackk gap-4">â‚¬<input id="importo" placeholder="Importo" type="number" class="outline-1 outline-dashed outline-[var(--gray-color)] rounded-[10px]"></h1>
			<div class="flex h-full w-full flex-col gap-2 items-start">

				<p class="w-full p text-grayy font-bold">Scadenza
					<input id="scadenza" type="date" class="font-normal"></p>


				<div class="overflow-y-scroll scrollbar-none mt-5 h-full w-full">
					<p class="p text-blackk w-full">
						<textarea id="descrizione" class="w-full min-h-[300px] p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none" placeholder="Descrizione"></textarea>
					</p>
				</div>

				<p class="w-full p text-grayy font-bold"><input id="pagato" type="checkbox" class="font-normal">
					Pagato?
				</p>

				<input id="dataPagamento" type="date" class="font-normal">


        <button class="modalTasseButton mt-auto self-end p text-blackk bg-primary text-whitee rounded-[10px] px-5 py-3 cursor-pointer hover:brightness-120 transition-all duration-500" type="submit">Aggiungi</button>

			</div>


		</div>


	</form>
{% endblock modal %}
