{% extends 'base.html.twig' %}

{% block sidebar %}{% endblock %}

{% block body %}
	{% if error %}
		<div class="bg-red-100 absolute top-0 left-0 text-center w-full flex justify-center items-center">
			<p class="p p-2 animate-shake font-bold text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
		</div>
	{% endif %}
	<div class="bg-bg flex h-full w-full items-center justify-center">
		<form class="shadows rounded-[20px] bg-whitee min-w-[500px] flex flex-col px-10 py-4" action="{{ path('app_login') }}" method="post">

			<img class="my-10" src="{{ asset('imgs/logo.svg') }}" alt="">

			<label class="p text-blackk mb-2" for="username">👤Username</label>
			<input class="mb-5 p text-grayy p-5 rounded-[10px] outline-1 focus:outline-3 outline-[var(--bg-color)]" type="text" id="username" name="_username" value="" required/>

			<label class="p text-blackk mb-2" for="password">🔒Password</label>
			<input class="mb-5 p text-grayy p-5 rounded-[10px] outline-1 focus:outline-3 outline-[var(--bg-color)]" type="password" id="password" name="_password" required/>

			<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}"/>

			<button class="p text-blackk bg-primary text-whitee rounded-[10px] p-3 cursor-pointer hover:brightness-120 transition-all duration-500" type="submit">👍Login</button>
			<p class="text-center mt-5 p text-grayy">or</p>
			
			<div class="flex gap-2 justify-center items-center">
				<a href="..\register" class="p text-primary text-center rounded-[10px] p-3 cursor-pointer hover:brightness-120 transition-all duration-500">Register</a>
				<p class="p text-blackk">◆</p>
				<p class=" p esse3Button text-[#e2001a] text-center rounded-[10px] p-3 cursor-pointer hover:brightness-120 transition-all duration-500">ESSE3</p>
			</div>
		</form>


		<div id="esse3Popup" class="popup-hidden backdrop-blur-md  absolute w-full top-0 left-0 h-full flex flex-col transition-all justify-center items-center bg-[#18196386]">
		
			<form class="flex  rounded-[20px] overflow-clip  w-[auto] h-auto ">

				<img class="w-[300px] p-10 aspect-square bg-[#e2001a]" src="https://unicam.idp.cineca.it/images/logo.svg" alt="unicamEsse3">

				<div class=" flex flex-col p-10 bg-whitee">
					<label class="p text-blackk mb-2" for="username">Nome utente</label>
					<input class="mb-5 p text-grayy p-5 rounded-[10px] outline-1 focus:outline-3 outline-[#e2001a]" type="text" id="username" name="_username" value="" required/>

					<label class="p text-blackk mb-2" for="password">Password</label>
					<input class="mb-5 p text-grayy p-5 rounded-[10px] outline-1 focus:outline-3 outline-[#e2001a]" type="password" id="password" name="_password" required/>
				
					<button class="p text-blackk bg-[#e2001a] text-whitee rounded-[10px] p-3 cursor-pointer hover:brightness-110 transition-all duration-500 font-bold" type="submit">Sincronizza</button>
				
				</div>

			</form>
		
				<a class="esse3Button p text-whitee font-bold mt-5 text-center cursor-pointer  hover:brightness-75 ">Indietro</a>
		
		</div>

		
		{% block javascripts_custom %}
      <script src="{{ asset("scripts/openEsse3.js") }}"></script>
    {% endblock %}

	{% endblock %}
