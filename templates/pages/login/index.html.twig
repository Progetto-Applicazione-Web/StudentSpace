{% extends 'base.html.twig' %}

{% block sidebar %}{% endblock %}

{% block body %}
	{% if error %}
		<div class="bg-red-100 absolute top-0 left-0 text-center w-full flex justify-center items-center">
			<p class="p p-2 animate-shake font-bold text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
		</div>
	{% endif %}
	<div class="bg-bg flex h-full w-full items-center justify-center">
		<form class="shadows rounded-[20px] bg-whitee min-w-[500px] flex flex-col px-10 py-4" action="{{ path('app_login') }}" method="post">

			<img class="my-10" src="{{ asset('imgs/logo.svg') }}" alt="">

			<label class="p text-blackk mb-2" for="username">👤Username</label>
			<input class="mb-5 p text-grayy p-5 rounded-[10px] outline-1 focus:outline-3 outline-[var(--bg-color)]" type="text" id="username" name="_username" value="" required/>

			<label class="p text-blackk mb-2" for="password">🔒Password</label>
			<input class="mb-5 p text-grayy p-5 rounded-[10px] outline-1 focus:outline-3 outline-[var(--bg-color)]" type="password" id="password" name="_password" required/>

			<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}"/>

			<button class="p text-blackk bg-primary text-whitee rounded-[10px] p-3 cursor-pointer hover:brightness-120 transition-all duration-500" type="submit">👍Login</button>
			<p class="text-center mt-5 p text-grayy">or</p>
			
			<div class="flex gap-2 justify-center items-center">
				<a href="{{ path('app_register') }}" class="p text-primary text-center rounded-[10px] p-3 cursor-pointer hover:brightness-120 transition-all duration-500">Register</a>
			</div>
		</form>


		

	{% endblock %}
