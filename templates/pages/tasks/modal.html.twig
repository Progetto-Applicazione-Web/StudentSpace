{% block modal %}
	<form id="formAddTodoList" class="flex justify-center items-center z-50 absolute w-screen h-screen bg-[#46475ad3] m-[-20px]">
		<div class="p-[30px] flex items-start flex-col gap-3 rounded-[30px] bg-whitee aspect-video h-3/4 ">
			<span class="flex justify-between items-center w-full">
				<p class="p text-grayy cursor-pointer">Nuova Todo List</p>
				<img class="modalTasksButton aspect-square h-[30px] cursor-pointer" src="{{ asset('icons/close.svg') }}" alt="Chiudi">
			</span>

			<h1 class="flex heading-1 text-blackk gap-4">
				<input id="titolo" placeholder="Titolo Todo List" type="text" class="outline-1 outline-dashed outline-[var(--gray-color)] rounded-[10px]">
			</h1>
			<div class="flex h-full w-full flex-col gap-5 items-start">
				<div id="divAddTodoList" class="flex h-[423px] w-full overflow-y-scroll  flex-col  gap-3">
					{# Qua spawnano le task #}
				</div>
				<span class="flex mt-auto w-full justify-between gap-3">
					<button id="btnAddTask" class="p bg-grayy font-bold text-whitee rounded-[10px] px-16 py-2 cursor-pointer hover:brightness-90 transition-all duration-500">+</button>

					<button class="  p text-blackk bg-primary text-whitee rounded-[10px] px-5 py-3 cursor-pointer hover:brightness-120 transition-all duration-500" type="submit">Aggiungi</button>
				</span>
				
			</div>
		</div>
	</form>
{% endblock modal %}
